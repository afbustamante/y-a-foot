              </rules>
              <fail>true</fail>
              <skip>false</skip>
            </configuration>
          </execution>
          <execution>
            <id>enforce-banned-dependencies</id>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <rules>
                <bannedDependencies>
                  <searchTransitive>true</searchTransitive>
                  <excludes>
                    <exclude>cglib:cglib</exclude>
                    <exclude>cglib:cglib-asm</exclude>
                    <exclude>cglib:cglib-full</exclude>
                    <exclude>xml-apis:*</exclude>
                    <exclude>xerces:*</exclude>
                    <exclude>xalan:*</exclude>
                    <exclude>javax.xml.bind:jsr173_api</exclude>
                    <exclude>org.apache.ws.commons:XmlSchema</exclude>
                    <exclude>net.sf.ehcache:ehcache-core</exclude>
                    <exclude>org.unitils:unitils</exclude>
                    <exclude>xmlbeans:xbean</exclude>
                    <exclude>aspectj:aspectjweaver</exclude>
                    <exclude>jfree:*</exclude>
                    <exclude>bouncycastle:*</exclude>
                    <exclude>org.codehaus.jackson:jackson-core-lgpl</exclude>
                    <exclude>org.codehaus.jackson:jackson-mapper-lgpl</exclude>
                    <exclude>org.jboss.netty:netty</exclude>
                    <exclude>javassist:javassist</exclude>
                    <exclude>asm:asm</exclude>
                    <exclude>junit:junit</exclude>
                    <exclude>commons-collections:commons-collections</exclude>
                  </excludes>
                  <message>Forbidden libraries</message>
                </bannedDependencies>
              </rules>
              <fail>true</fail>
            </configuration>
          </execution>
          <execution>
            <id>no-duplicate-declared-dependencies</id>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <rules>
                <dependencyConvergence />
                <banDuplicatePomDependencyVersions />
              </rules>
              <fail>true</fail>
              <skip>false</skip>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>${compiler.source}</source>
          <target>${compiler.target}</target>
          <encoding>${project.build.sourceEncoding}</encoding>
          <annotationProcessorPaths>
            <path>
              <groupId>org.projectlombok</groupId>
              <artifactId>lombok</artifactId>
              <version>${lombok.version}</version>
            </path>
          </annotationProcessorPaths>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.jacoco</groupId>
        <artifactId>jacoco-maven-plugin</artifactId>
        <configuration>
          <excludes>
            <exclude>META-INF/**</exclude>
            <exclude>**/*Aspect.*</exclude>
            <exclude>**/*Config.*</exclude>
            <exclude>**/*Constants.*</exclude>
            <exclude>**/*Test.*</exclude>
            <exclude>**/*Exception.*</exclude>
            <exclude>**/*Bean.*</exclude>
            <exclude>**/*ViewModel.*</exclude>
            <exclude>**/*UIService.*</exclude>
            <exclude>**/yafoot/model/**</exclude>
            <exclude>**/yafoot/web/dto/**</exclude>
            <exclude>org/w3/**</exclude>
          </excludes>
        </configuration>
        <executions>
          <execution>
            <id>pre-unit-test</id>
            <goals>
              <goal>prepare-agent</goal>
            </goals>
          </execution>
          <execution>
            <id>post-unit-test</id>
            <phase>test</phase>
            <goals>
              <goal>report</goal>
              <goal>check</goal>
            </goals>
            <configuration>
              <rules>
                <rule>
                  <element>BUNDLE</element>
                  <limits>
                    <limit>
                      <counter>COMPLEXITY</counter>
                      <value>COVEREDRATIO</value>
                      <minimum>0.62</minimum>
                    </limit>
                  </limits>
                </rule>
                <rule>
                  <element>CLASS</element>
                  <excludes>
                    <exclude>*Application</exclude>
                    <exclude>*Filter</exclude>
                    <exclude>*Aspect</exclude>
                    <exclude>*Config</exclude>
                    <exclude>*Constants</exclude>
                    <exclude>*Test</exclude>
                    <exclude>*Exception</exclude>
                    <exclude>*ViewModel</exclude>
                    <exclude>*UIService</exclude>
                    <exclude>*Mapper</exclude>
                    <exclude>*MapperImpl</exclude>
                    <exclude>*Api</exclude>
                    <exclude>*AuthenticationEntryPoint</exclude>
                  </excludes>
                  <limits>
                    <limit>
                      <counter>INSTRUCTION</counter>
                      <value>COVEREDRATIO</value>
                      <minimum>0.80</minimum>
                    </limit>
                  </limits>
                </rule>
              </rules>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>