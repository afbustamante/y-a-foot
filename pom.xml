         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>net.andresbustamante</groupId>
  <artifactId>y-a-foot</artifactId>
  <packaging>pom</packaging>
  <version>1.0.0-SNAPSHOT</version>

  <modules>
    <module>y-a-foot-framework</module>
    <module>y-a-foot-services</module>
    <module>y-a-foot-ws</module>
    <module>y-a-foot-web</module>
  </modules>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <endorsed.dir>${project.build.directory}/endorsed</endorsed.dir>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven-war-plugin.version>3.2.0</maven-war-plugin.version>
    <maven-dependency-plugin.version>2.10</maven-dependency-plugin.version>
    <maven-compiler-plugin.version>3.8.0</maven-compiler-plugin.version>
    <maven-jaxb2-plugin.version>0.13.3</maven-jaxb2-plugin.version>

    <javaee-web-api.version>7.0</javaee-web-api.version>
    <spring.version>4.3.13.RELEASE</spring.version>
    <spring-dao.version>2.0.8</spring-dao.version>
    <spring-ldap-core.version>2.3.2.RELEASE</spring-ldap-core.version>
    <spring-data-commons.version>2.0.6.RELEASE</spring-data-commons.version>
    <icefaces.version>4.1.1</icefaces.version>
    <junit.version>4.12</junit.version>
    <jackson-databind.version>2.8.10</jackson-databind.version>
    <mybatis.version>3.4.6</mybatis.version>
    <mybatis-spring.version>1.3.2</mybatis-spring.version>
    <commons-text.version>1.1</commons-text.version>
    <commons-lang3.version>3.5</commons-lang3.version>
    <commons-collections4.version>4.1</commons-collections4.version>
    <commons-logging.version>1.2</commons-logging.version>
    <commons-dbcp.version>1.4</commons-dbcp.version>
    <postgresql.version>42.2.2</postgresql.version>
    <mapstruct.version>1.2.0.Final</mapstruct.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <!-- Java EE -->
      <dependency>
        <groupId>javax</groupId>
        <artifactId>javaee-web-api</artifactId>
        <version>${javaee-web-api.version}</version>
      </dependency>

      <!-- Spring Framework -->
      <dependency>
        <groupId>org.springframework</groupId>
        <artifactId>spring-core</artifactId>
        <version>${spring.version}</version>
      </dependency>
      <dependency>
        <groupId>org.springframework</groupId>
        <artifactId>spring-context</artifactId>
        <version>${spring.version}</version>
