<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.andresbustamante.yafoot.dao.VoitureDAO">
    
    <select id="chercherVoitureParId" resultType="net.andresbustamante.yafoot.model.Voiture">
        
    </select>

    <insert id="enregistrerVoiture" useGeneratedKeys="true">
        <selectKey keyProperty="voiture.id" resultType="int" order="BEFORE">
            SELECT NEXTVAL('yafoot.s_voiture') AS id;
        </selectKey>
    </insert>
</mapper>